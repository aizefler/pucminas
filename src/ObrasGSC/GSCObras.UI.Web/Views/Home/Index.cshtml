@{
    ViewData["Title"] = "Pagamentos";
}

    <h4>Pagamentos - <small>Medições de Serviços</small></h4>
    <div>
            <ejs-combobox id="obras" autofill="true" dataSource="@ViewBag.DataSourceObras" value="ViewBag.ObraSelected" change="obraChange" placeholder="Seleciona uma Obra" popupHeight="230px">
                        <e-combobox-fields text="Descricao" value="Id"></e-combobox-fields>
            </ejs-combobox>
    </div>
    <div class="margin-top: 10px">
                 <ejs-grid id="Grid" dataSource="@ViewBag.DataSourcePagamentos" allowGrouping="true" allowPaging="true"> 

                    <e-grid-columns>
                        <e-grid-column field="janela" headerText="Medição" textAlign="Center" width="100"></e-grid-column>
                        <e-grid-column field="fornecedorCNPJ" headerText="Fornecedor CNPJ" textAlign="Center" width="120"></e-grid-column>
                        <e-grid-column field="fornecedorNome"  headerText="Fornecedor" textAlign="Center" width="170"></e-grid-column>
                        <e-grid-column field="situacao" headerText="Situação" format="C2" textAlign="Center" width="80"></e-grid-column>
                        <e-grid-column field="valor" headerText="Valor" format="C2" width="80" textAlign="Center"></e-grid-column>
                    </e-grid-columns>
                </ejs-grid>    
    </div>
